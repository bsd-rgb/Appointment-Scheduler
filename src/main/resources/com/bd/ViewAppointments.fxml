<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>


<AnchorPane prefHeight="565.0" prefWidth="1002.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewAppointmentsController">
   <children>
      <TableView fx:id="appointmentTable" layoutX="63.0" layoutY="136.0" prefHeight="321.0" prefWidth="877.0">
        <columns>
          <TableColumn prefWidth="75.0" text="C1" />
          <TableColumn prefWidth="75.0" text="C2" />
        </columns>
      </TableView>
      <Label layoutX="437.0" layoutY="26.0" text="Appointments" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="292.0" layoutY="81.0" prefHeight="38.0" prefWidth="420.0" spacing="25.0">
         <children>
            <RadioButton fx:id="allAppointments" lineSpacing="10.0" mnemonicParsing="false" text="All">
               <toggleGroup>
                  <ToggleGroup fx:id="appointmentFilterToggle" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="appointmentWeek" mnemonicParsing="false" text="This Week" toggleGroup="$appointmentFilterToggle" />
            <RadioButton fx:id="appointmentMonth" mnemonicParsing="false" text="This Month" toggleGroup="$appointmentFilterToggle" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="63.0" layoutY="475.0" prefHeight="64.0" prefWidth="420.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionAddAppointment" text="Add Appointment" />
            <Button mnemonicParsing="false" onAction="#onActionModifyAppointment" text="Modify Appointment" />
            <Button mnemonicParsing="false" onAction="#onActionDeleteAppointment" text="Delete Appointment" />
         </children>
      </HBox>
      <Button layoutX="888.0" layoutY="495.0" mnemonicParsing="false" onAction="#onActionGoBack" text="Back" />
   </children>
</AnchorPane>
