<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="612.0" prefWidth="1272.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ViewAppointmentsController">
   <children>
      <TableView fx:id="appointmentTable" layoutX="18.0" layoutY="136.0" prefHeight="349.0" prefWidth="1248.0">
        <columns>
          <TableColumn fx:id="apptIdCol" prefWidth="102.0" text="Appointment ID" />
          <TableColumn fx:id="apptTitleCol" prefWidth="129.0" text="Title" />
            <TableColumn fx:id="apptDescCol" prefWidth="147.0" text="Description" />
            <TableColumn fx:id="apptLocationCol" prefWidth="90.0" text="Location" />
            <TableColumn fx:id="apptContactCol" prefWidth="105.0" text="Contact" />
            <TableColumn fx:id="apptTypeCol" prefWidth="109.0" text="Type" />
            <TableColumn fx:id="apptStartCol" prefWidth="192.0" text="Start Date &amp; Time" />
            <TableColumn fx:id="apptEndCol" prefWidth="188.0" text="End Date &amp; Time" />
            <TableColumn fx:id="apptCustomerIdCol" prefWidth="98.0" text="Customer ID" />
            <TableColumn fx:id="apptUserIdCol" prefWidth="87.0" text="User ID" />
        </columns>
      </TableView>
      <Label layoutX="577.0" layoutY="24.0" text="Appointments" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="19.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="432.0" layoutY="79.0" prefHeight="38.0" prefWidth="420.0" spacing="25.0">
         <children>
            <RadioButton fx:id="allAppointments" lineSpacing="10.0" mnemonicParsing="false" text="All">
               <toggleGroup>
                  <ToggleGroup fx:id="appointmentFilterToggle" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="appointmentWeek" mnemonicParsing="false" text="This Week" toggleGroup="$appointmentFilterToggle" />
            <RadioButton fx:id="appointmentMonth" mnemonicParsing="false" text="This Month" toggleGroup="$appointmentFilterToggle" />
         </children>
      </HBox>
      <HBox alignment="CENTER" layoutX="18.0" layoutY="496.0" prefHeight="64.0" prefWidth="420.0" spacing="10.0">
         <children>
            <Button mnemonicParsing="false" onAction="#onActionAddAppointment" text="Add Appointment" />
            <Button mnemonicParsing="false" onAction="#onActionModifyAppointment" text="Modify Appointment" />
            <Button mnemonicParsing="false" onAction="#onActionDeleteAppointment" text="Delete Appointment" />
         </children>
      </HBox>
      <Button layoutX="1151.0" layoutY="516.0" mnemonicParsing="false" onAction="#onActionGoBack" text="Back" />
   </children>
</AnchorPane>
