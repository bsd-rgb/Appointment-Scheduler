            <TextField fx:id="postalCodeTxtField" />
            <TextField fx:id="phoneTxtField" />
         </children>
      </VBox>
      <VBox layoutX="53.0" layoutY="97.0" prefHeight="160.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Label text="Customer Name" />
            <Label text="Address" />
            <Label text="Postal Code">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label text="Phone Number">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </VBox>
