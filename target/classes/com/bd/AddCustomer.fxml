<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="628.0" prefWidth="501.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AddCustomerController">
   <children>
      <VBox layoutX="138.0" layoutY="101.0" prefHeight="126.0" prefWidth="247.0" spacing="15.0">
         <children>
            <TextField fx:id="customerNameTxtField" />
            <TextField fx:id="addressTxtField" />
            <TextField fx:id="postalCodeTxtField" />
            <TextField fx:id="phoneTxtField" />
         </children>
      </VBox>
      <VBox layoutX="30.0" layoutY="93.0" prefHeight="160.0" prefWidth="100.0" spacing="20.0">
         <children>
            <Label text="Customer Name" />
            <Label text="Address" />
            <Label text="Postal Code">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
            <Label text="Phone Number">
               <padding>
                  <Insets top="5.0" />
               </padding>
            </Label>
         </children>
         <padding>
            <Insets left="10.0" top="10.0" />
         </padding>
      </VBox>
      <ComboBox fx:id="divisionCombo" layoutX="130.0" layoutY="434.0" prefHeight="25.0" prefWidth="178.0" promptText="First-level Division" />
      <ComboBox fx:id="countryCombo" layoutX="130.0" layoutY="378.0" onAction="#onActionCountrySelected" prefHeight="25.0" prefWidth="178.0" promptText="Country" />
      <Button layoutX="130.0" layoutY="509.0" mnemonicParsing="false" onAction="#onActionAddCustomer" prefHeight="25.0" prefWidth="130.0" text="Add Customer">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>
      <Button layoutX="385.0" layoutY="534.0" mnemonicParsing="false" onAction="#onActionCancel" text="Cancel" />
      <Label layoutX="187.0" layoutY="37.0" text="Add Customer" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="22.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" layoutX="115.0" layoutY="301.0" prefHeight="38.0" prefWidth="258.0" spacing="15.0">
         <children>
            <RadioButton fx:id="residentialRadio" mnemonicParsing="false" text="Residential" />
            <RadioButton fx:id="commercialRadio" mnemonicParsing="false" text="Commercial" />
         </children>
      </HBox>
      <Label contentDisplay="CENTER" layoutX="139.0" layoutY="269.0" prefHeight="17.0" prefWidth="209.0" text="Customer Type" textAlignment="CENTER">
         <font>
            <Font name="System Bold" size="15.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
